<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:name=".MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
                android:initOrder="50"
                android:name="com.github.apkelly.bolt.startup.BoltInitializationProvider"
                android:authorities="${applicationId}.bolt-startup"
                android:exported="false"
                tools:node="merge">

            <meta-data
                    android:name="com.swizel.android.whereintheworld.startup.DiagnosticsInitializer"
                    android:value="bolt.startup" />
            <meta-data
                    android:name="com.swizel.android.whereintheworld.startup.KoinInitializer"
                    android:value="bolt.startup" />
            <meta-data
                    android:name="com.swizel.android.whereintheworld.startup.LoggingInitializer"
                    android:value="bolt.startup" />
            <meta-data
                    android:name="com.swizel.android.whereintheworld.startup.FeatureFlagsInitializer"
                    android:value="bolt.startup" />
        </provider>

        <meta-data
                android:name="com.google.android.gms.games.APP_ID"
                android:value="@string/app_id" />

        <meta-data
                android:name="com.google.android.geo.API_KEY"
                android:value="AIzaSyBu6hqUlUROaKKVZk9MRHcDuyGjhsu4JG0" />

        <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version" />

    </application>

</manifest>